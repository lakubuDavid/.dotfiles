# echo "work" >> ee.txt

# resize_step=100

# cmd - return : open -na /Applications/Ghostty.app
# cmd + ralt - a : osascript ~/.config/skhd/yabai/open_arc.scpt  

          
# yabai hotkeys
alt + shift - right : yabai -m query --windows --window | jq -r '.stack_index' | grep -q 'null' && yabai -m window --focus east || yabai -m window --focus stack.next || yabai -m window --focus stack.first
alt + shift - left : yabai -m query --windows --window | jq -r '.stack_index' | grep -q 'null' && yabai -m window --focus west || yabai -m window --focus stack.prev || yabai -m window --focus stack.last
alt + shift - up : yabai -m window --focus north
alt + shift - down : yabai -m window --focus south

alt + shift - t: yabai -m window --toggle float;\
				 yabai -m window --grid 5:5:1:1:3:3
# alt + shift - space: yabai -m query --spaces --space | jq -r '.type' | grep -q 'bsp' && yabai -m space --layout float || (yabai -m query --spaces --space | jq -r '.type' | grep -q 'float' && yabai -m space --layout stack || yabai -m space --layout bsp)
alt + shift - space : yabai -m query --spaces --space | jq -r '.type' | grep -q 'float' && yabai -m space --layout stack || (yabai -m query --spaces --space | jq -r '.type' | grep -q 'stack' && yabai -m space --layout bsp || yabai -m space --layout float)
alt + shift - m : yabai -m query --spaces --space | jq -r '.tiling' | grep -q 'vertical' && yabai -m space --rotate 90 || yabai -m space --rotate 270
# alt + shift - o : yabai -m window --resize left:-20:0 || yabai -m window --resize right:20:0
# alt + shift - p : yabai -m window --resize right:20:0 || yabai -m window --resize left:-20:0

# alt + shift - p : yabai -m window --resize right:100:0 || yabai -m window --resize left:-100:0
# alt + shift - o : yabai -m window --resize left:100:0 || yabai -m window --resize right:-100:0
alt + shift - 0x1E : yabai -m window --resize right:100:0 || yabai -m window --resize left:-100:0 # ]
alt + shift - 0x21 : yabai -m window --resize left:100:0 || yabai -m window --resize right:-100:0 # [

ctrl + alt  - right : yabai -m window --swap east
ctrl + alt  - left : yabai -m window --swap west
ctrl + alt  - up : yabai -m window --swap north
ctrl + alt  - down : yabai -m window --swap south
 
ctrl + shift - left : yabai -m window --space prev  && yabai -m space --focus prev
ctrl + shift - right : yabai -m window --space next && yabai -m space --focus next

ctrl + shift + alt - 1 : yabai -m window --space 1
ctrl + shift + alt - 2 : yabai -m window --space 2
ctrl + shift + alt - 3 : yabai -m window --space 3
ctrl + shift + alt - 4 : yabai -m window --space 4
ctrl + shift + alt - 5 : yabai -m window --space 5
ctrl + shift + alt - 6 : yabai -m window --space 6
ctrl + shift + alt - 7 : yabai -m window --space 7
ctrl + shift + alt - 8 : yabai -m window --space 8
ctrl + shift + alt - 9 : yabai -m window --space 9
ctrl + shift + alt - 0 : yabai -m window --space 10

ctrl + alt - 1 : yabai -m space --focus 1
ctrl + alt - 2 : yabai -m space --focus 2
ctrl + alt - 3 : yabai -m space --focus 3
ctrl + alt - 4 : yabai -m space --focus 4
ctrl + alt - 5 : yabai -m space --focus 5
ctrl + alt - 6 : yabai -m space --focus 6
ctrl + alt - 7 : yabai -m space --focus 7
ctrl + alt - 8 : yabai -m space --focus 8
ctrl + alt - 9 : yabai -m space --focus 9
ctrl + alt - 0 : yabai -m space --focus 10

ctrl + alt - 0x08 : yabai -m space --create # c
ctrl + alt - 0x07 : ~/.config/skhd/yabai/destroy_space.sh  #&& yabai -m space --focus recent || yabai -m space --focus last  # x
