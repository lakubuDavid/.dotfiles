[[blocks]]
type = 'rprompt'
alignment = 'right'
newline = true

[[blocks.segments]]
type = "go"
style = "plain"
foreground = "p:sky"
background = "transparent"
template = " <b></b> {{ .Full }} "

[[blocks.segments]]
type = "node"
alias = "Node"
style = "plain"
foreground = "p:green"
background = "transparent"
template = "{{if .Segments.Bun }}{{else}}  {{ .Full }}{{end}}"

[[blocks.segments]]
type = "bun"
alias = "Bun"
style = "plain"
foreground = "p:yellow"
template = " bun {{ .Full }} "

# [[blocks.segments]]
# type = "docker"
# alias = "Docker"
# style = "plain"
# foreground = "p:blue"
# background = "transparent"
# template = "  {{ .Context }} "

[[blocks.segments]]
type = "lua"
style = "plain"
foreground = "p:blue"
background = "transparent"
template = "{{ if glob \"*.lua\" }}  {{ .Full }} {{end}}"

[blocks.segments.properties]
display_mode = "files"
home_enabled = true

[[blocks.segments]]
type = "python"
style = "plain"
foreground = "p:blue"
background = "transparent"
template = "{{ if glob \"*.py\" }}  {{ .Full }} {{ end }}"


# [blocks.segments.properties]
# display_mode = "files"
[[blocks.segments]]
type = "executiontime"
style = "plain"
foreground = "p:yellow"
background = "transparent"
template = " {{ .FormattedMs }} "

[blocks.segments.properties]
threshold = 500
style = "austin"
always_enabled = true
[[blocks]]
type = 'prompt'
alignment = 'left'

[[blocks.segments]]
type = 'text'
style = 'plain'
template = '<b>╰</b>'
foreground = 'p:overlay2'

[[blocks.segments]]
type = 'text'
style = 'plain'
template = '❯'
foreground = 'p:flamingo'


[secondary_prompt]
template = ' ❯❯ '
foreground = 'p:flamingo'
background = "transparent"
newline = false


[transient_prompt]
background = "transparent"
template = '{{if eq .Code 0}} ❯ {{else}}<#e78284> ❯</> {{end}}'
foreground = 'p:green'
newline = false

